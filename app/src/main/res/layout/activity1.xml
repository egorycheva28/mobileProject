<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Activity1">

    <LinearLayout
        android:id="@+id/up_arrows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/back" />


        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:src="@drawable/save" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewFirstFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/under_tools"
        android:layout_below="@id/up_arrows"
        android:background="@color/black" />


    <HorizontalScrollView
        android:id="@+id/under_tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/rotate_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/rotate" />

            <ImageButton
                android:id="@+id/bw_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/black_white" />

            <ImageButton
                android:id="@+id/red_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/red" />

            <ImageButton
                android:id="@+id/brightness_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/brightness" />

            <ImageButton
                android:id="@+id/blur_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/blur" />

            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/filter" />

            <ImageButton
                android:id="@+id/crop_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/scale" />

            <ImageButton
                android:id="@+id/face_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/face" />

            <ImageButton
                android:id="@+id/unsharp_button"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/star" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>