<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rotate_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Activity1">

    <LinearLayout
        android:id="@+id/up_arrows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:src="@drawable/save" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewFirstFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rotate_layout_button"
        android:layout_below="@id/up_arrows"
        android:background="@color/black" />

    <ImageButton
        android:id="@+id/rotate_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/rotate_layout_1" />

</RelativeLayout>